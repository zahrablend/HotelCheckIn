@page
@model HotelCheckIn.Web.Pages.Guests.GuestModel

@{
    ViewData["Title"] = "Guests";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].PersonalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].CheckOut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Guest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
